@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>
@{

	Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/_Breadcrumb" model="(IBreadcrumb)Model" />

<section class="py-16">
	<div class="max-w-7xl mx-auto px-[2rem]">
		<div class="flex flex-row justify-between">
			<aside class="hidden md:block md:w-1/3 lg:w-1/4 [&>.umb-block-list]:flex [&>.umb-block-list]:flex-col [&>.umb-block-list]:gap-10">
				@Html.GetBlockListHtml(Model.ServiceDetailAsides)
			</aside>
			<div class="hidden md:block w-px bg-border-gray"></div>
			<div class="md:w-1/2 lg:w-2/3 flex flex-col gap-2">
				<div class="rte">@Html.Raw(Model.ServiceDetailBody)</div>
			</div>
		</div>
	</div>
</section>

@Html.GetBlockListHtml(Model.Sections)