@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative py-[5rem] isolate overflow-hidden">
	<div class="absolute inset-0">
		@if (content.HeroBgImage != null)
		{
			<img src="@content.HeroBgImage.Url()" class="w-full h-full object-cover" />
		}
	</div>

	<div class="max-w-7xl mx-auto px-4 relative z-10">
		<div class="w-11/24 flex flex-col gap-3">
			<h1 class="text-[4.375rem] text-primary font-bold leading-none">@content.HeroTitle</h1>
			<div class="rte">@Html.Raw(content.HeroText)</div>
			@if (content.HeroLink != null)
			{
				<a class="bg-primary text-white py-3 px-10 no-underline rounded cursor-pointer self-start font-bold" href=@content.HeroLink.Url>@content.HeroLink.Name</a>
			}
		</div>
	</div>
</section>