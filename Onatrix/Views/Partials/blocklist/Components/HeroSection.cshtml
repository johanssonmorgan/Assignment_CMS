@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative py-[2.5rem] md:py-[4rem] lg:py-[5rem] isolate overflow-hidden bg-white-100">
	<div class="hidden md:block absolute inset-0">
		@if (content.HeroBgImage != null)
		{
			<img src="@content.HeroBgImage.Url()" class="w-full h-full object-cover" />
		}
	</div>

	<div class="max-w-7xl mx-auto px-[2rem] relative z-10">
		<div class="md:w-1/2 lg:w-11/24 flex flex-col gap-3 text-center md:text-left">
			<h1 class="text-[2.5rem] md:text-[3rem] lg:text-[4.375rem] text-primary font-bold leading-none">@content.HeroTitle</h1>
			<div class="rte mb-2 md:mb-0">@Html.Raw(content.HeroText)</div>
			@if (content.HeroLink != null)
			{
				<a class="bg-primary font-bold text-white py-3 px-10 no-underline rounded cursor-pointer w-fit self-center md:self-start" href=@content.HeroLink.Url>@content.HeroLink.Name</a>
			}
		</div>
	</div>
</section>