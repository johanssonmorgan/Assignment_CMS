@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TrustedSection)Model.Content;

    var line1 = content.TrustedTitleLine1;
    var line2 = content.TrustedTitleLine2;
    var text = content.TrustedText;
    var link = content.TrustedLink;
    var image = content.TrustedImage;

}

<section class="pt-[6rem]">
    <div class="max-w-7xl mx-auto px-[2rem] text-center">

        <div class="bg-no-repeat
             [background-image:url('/images/trusted-bg.svg')]
             [background-position:center_calc(50%-6rem)]
             [background-size:auto]">
            
            <div class="flex flex-col gap-2 md:gap-5 mb-[5.5rem]">
                <h2 class="font-bold leading-tight">
                    @if (!string.IsNullOrWhiteSpace(line1))
                    {
                        <span class="block text-2xl md:text-4xl text-primary">@line1</span>
                    }
                </h2>
                <h2 class="font-bold leading-tight">
                    @if (!string.IsNullOrWhiteSpace(line2))
                    {
                        <span class="block text-2xl md:text-4xl text-secondary">@line2</span>
                    }
                </h2>

                @if (!string.IsNullOrWhiteSpace(text))
                {
                    <p class="mt-4 mx-auto max-w-2xl text-body-text">@text</p>
                }

                @if (link != null)
                {
                    <a href=@link.Url class="self-center inline-block mt-6 px-8 py-3 rounded-sm bg-primary text-accent font-semibold hover:opacity-90 transition">
                        @(!string.IsNullOrWhiteSpace(link.Name) ? link.Name : "Read more")
                    </a>
                }
            </div>

            @if (image != null)
            {
                <div class="hidden md:block mt-10">
                    <img src="@image.Url()" alt="@image.Name" class="mx-auto max-w-full h-auto object-contain"
                         loading="lazy" decoding="async" />
                </div>
            }
        </div>
    </div>
</section>