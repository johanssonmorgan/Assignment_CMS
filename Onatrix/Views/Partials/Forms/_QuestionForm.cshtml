@using Onatrix.ViewModels
@model QuestionFormViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "questionForm" }))
{
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">

        <div>
            <label asp-for="Name" class="sr-only"></label>
            <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <label asp-for="QuestionEmail" class="sr-only"></label>
            <input asp-for="QuestionEmail" type="text" placeholder="@Html.DisplayNameFor(x => x.QuestionEmail)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="QuestionEmail"></span>
        </div>

        <div class="md:col-span-2">
            <label asp-for="Question" class="sr-only"></label>
            <textarea asp-for="Question" rows="6" placeholder="@Html.DisplayNameFor(x => x.Question)" class="w-full p-3 italic border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none resize-none"></textarea>
            <span asp-validation-for="Question"></span>
        </div>

        <div class="md:col-span-2 flex justify-center md:block md:mr-auto">
            <button type="submit" class="question-form-btn">Submit</button>
        </div>

    </div>
}